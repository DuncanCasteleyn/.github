{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits",
    ":timezone(Europe/Brussels)",
    "schedule:nonOfficeHours",
    "schedule:automergeNonOfficeHours",
    ":automergeDigest",
    ":automergeMinor",
    ":automergePr",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests",
    ":label(dependencies)"
  ],
  "automergeStrategy": "squash",
  "pinDigest": {
    "recreateClosed": true,
    "automerge": true
  }
}
